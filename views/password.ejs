<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Password</title>
    <%- include("./header.ejs") %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-wRxpJWXKjHH5U1SPrH1Nj+xhP7lCJW4DfOZGe0W98ZT2MKQ0zFYGM47t9tE45E8K"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <h5 id="ansPage">Hey your Password has been generated:</h5>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title" id="ansPage">Your Password is here:</h5>
        <div
          class="card-text form-control"
          id="password-text"
          style="width: 100%"
        >
          <%= password %>
        </div>

        <div class="card-body">
          <div class="card-text" style="border: none">
            <i
              id="copyBtn"
              class="fa-regular fa-clipboard copy-icon"
              title="Copy"
            ></i>
          </div>
        </div>
        <a href="/" id="Regenerate"
          ><button class="btn btn-primary">Regenerate</button></a
        >
      </div>
    </div>

    <!-- Alert Container -->
    <div class="alert-container"></div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      // Function to copy password text to clipboard
      function copyPassword() {
        const passwordText = document.querySelector("#password-text").innerText;
        navigator.clipboard.writeText(passwordText).then(
          () => {
            showAlert("Password copied to clipboard!", "success");
          },
          (err) => {
            showAlert("Failed to copy password!", "danger");
            console.error("Error copying text: ", err);
          }
        );
      }

      // Function to show Bootstrap alert
      function showAlert(message, type) {
        const alertContainer = document.querySelector(".alert-container");
        const alert = document.createElement("div");
        alert.className = `alert alert-${type} alert-dismissible fade show`;
        alert.role = "alert";
        alert.innerHTML = `
          ${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;

        alertContainer.appendChild(alert);

        // Automatically remove alert after 3 seconds
        setTimeout(() => {
          alert.classList.remove("show");
          alert.addEventListener("transitionend", () => alert.remove());
        }, 3000);
      }

      const copyBtn = document.querySelector("#copyBtn");
      copyBtn.addEventListener("click", () => {
        copyPassword();
      });
    </script>
  </body>
</html>
