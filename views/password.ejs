<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Password Generated</title>
    <%- include("./header.ejs") %>
    <style>
      .custom-alert {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        min-width: 280px;
        max-width: 90vw;
        background: linear-gradient(90deg, #63e6be 0%, #4e54c8 100%);
        color: #fff;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(76, 110, 245, 0.15);
        z-index: 2000;
        padding: 1rem 2rem;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        animation: fadeInScale 0.4s;
      }
      @keyframes fadeInScale {
        from {
          opacity: 0;
          transform: translate(-50%, -50%) scale(0.8);
        }
        to {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1);
        }
      }
      .custom-alert .fa-check-circle {
        font-size: 1.5rem;
        color: #fff;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h3 class="title">
        Your <b>Secure Password</b> <br />
        <span style="font-size: 1.2rem; font-weight: 400">
          Copy and use your new password below
        </span>
      </h3>
      <div class="main-card mx-auto">
        <div class="mb-3">
          <label for="password-text" class="form-label">
            <h5>Generated Password</h5>
          </label>
          <div
            class="card-text form-control"
            id="password-text"
            style="
              font-size: 1.3rem;
              letter-spacing: 2px;
              background: #f7faff;
              color: #4e54c8;
              font-weight: 600;
            "
          >
            <%= password %>
          </div>
          <div class="d-flex justify-content-center mt-2">
            <button type="button" class="btn btn-primary" id="copyBtn">
              <i class="fa-regular fa-clipboard copy-icon"></i> Copy Password
            </button>
          </div>
        </div>
        <div id="btn" class="d-flex justify-content-center mt-3">
          <a href="/" id="Regenerate">
            <button class="btn btn-primary">Generate Another Password</button>
          </a>
        </div>
      </div>
      <div class="alert-container"></div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script>
      // Function to copy password text to clipboard
      function copyPassword() {
        const passwordText = document.querySelector("#password-text").innerText;
        navigator.clipboard.writeText(passwordText).then(
          () => {
            showAlert("Password copied to clipboard!", "success");
          },
          (err) => {
            showAlert("Failed to copy password!", "danger");
            console.error("Error copying text: ", err);
          }
        );
      }

      // Function to show attractive centered alert
      function showAlert(message, type) {
        // Remove any existing custom alert
        const oldAlert = document.querySelector(".custom-alert");
        if (oldAlert) oldAlert.remove();

        const alert = document.createElement("div");
        alert.className = "custom-alert";
        alert.innerHTML = `
          <i class="fa-solid fa-check-circle"></i>
          ${message}
        `;
        document.body.appendChild(alert);
        setTimeout(() => {
          alert.style.opacity = "0";
          setTimeout(() => alert.remove(), 400);
        }, 2000);
      }

      document
        .querySelector("#copyBtn")
        .addEventListener("click", copyPassword);
    </script>
  </body>
</html>
