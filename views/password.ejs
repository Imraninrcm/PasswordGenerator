<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Password</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- Font Awesome for copy icon -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      body {
        background-color: azure;
      }

      * {
        font-family: Georgia, "Times New Roman", Times, serif;
      }

      h5 {
        text-align: center;
        text-decoration: underline;
      }

      .card {
        margin: auto;
        margin-top: 5%;
      }

      .card-text {
        display: flex;
        justify-content: space-evenly; /* Pushes the copy icon to the end */
        align-items: center;
        border-style: outset;
        text-align: center;
      }

      .copy-icon {
        cursor: pointer;
        color: #63e6be;
      }

      .btn-primary a {
        color: #fff;
        text-decoration: none;
      }

      #passwordBox {
        display: flex;
        justify-content: space-between;
      }

      form {
        display: flex;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <h5>Hey your Password has been generated:</h5>
    <div class="card" style="width: 80%">
      <div class="card-body">
        <h5 class="card-title">Your Password is here:</h5>
        <p class="card-text" id="passwordBox">
          <span> </span>
          <span id="password-text"><%= password %></span>

          <i
            class="fa-regular fa-clipboard"
            onclick="copyPassword()"
            title="Copy"
          ></i>
        </p>
        <form action="/" method="get">
          <button class="btn btn-primary">Regenerate</button>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      // Function to copy password text to clipboard
      function copyPassword() {
        const passwordText = document.querySelector("#password-text").innerText;
        navigator.clipboard.writeText(passwordText).then(
          () => {
            alert("Password copied to clipboard!");
          },
          (err) => {
            console.error("Error copying text: ", err);
          }
        );
      }
    </script>
  </body>
</html>
